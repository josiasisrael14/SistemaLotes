      function editar(idcliente) { 
        //alert(iddepartamento);
       
       $.ajax({

        //url:"/recuperarID/listarid/"+idempleados,
        method:"GET",
        data: {idcliente:idcliente},
        url:"/Clientes/listaridD",
        contentType: false,
        dataType:"json",
        success: function(data) {
            
            $('#idcliente').val(data[0].nombreD);
            $('#nombrecliente').val(data[0].descripcion);
            $('#celular').val(data[0].iddepartamentos);
            $('#direccion').val(data[0].iddepartamentos);
            $('#dni').val(data[0].iddepartamentos);
            $("#modalCajaMov").modal('show');
            $('#respuesta_nombre').attr("style", '');
            $('#respuesta_descripcion').attr("style", '');
        },

        error: function(errormessage) {


            alert(errormessage.responseText);

         }

        });

        return false;


       }




    </script>