<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Formulario</title>
	<link rel="stylesheet" href="boton.css">
	<link rel="stylesheet" href="font-awesome-4.7.0/css/font-awesome.min.css">

	<style type="text/css">

	


		body{
		
			font-family: Arial;
			/*background-color: #256999;*/
			box-sizing: border-box;
			padding: 100px;
		}

		form{
			background-color: white;
			border-radius: 0 0 3px 3px;
			color: #999;
			font-size: 0.8em;
			padding: 20px;
			margin: 0 auto;
			width: 330px;
		}

		 textarea{
			border: 0;
			outline: none;

			width: 280px;
		}
		input{
          text-align: center;

		}

		
		.field{
			border: solid 1px #ccc;
			border-radius: 0 4px 4px 0; 
			padding: 10px;
			width: 240px;
		}

		.field:focus{
			border-color: #18A383;
		}

		.center-content{
			text-align: center;
		}

		.field-container div{
			display: inline-block;
			vertical-align: top;

			
		}

		.field-container{

			text-align: center;

		}

	

		#menu ul{
			list-style: none;
			margin: 0;
			padding: 0;
		}

		#menu ul li{
			display: inline-block;
			width: 49%;
			margin-right: 0px;
		}

		#menu ul li a{
			background-color: #ccc;
			color: #222;
			display: block;
			padding: 20px 20px;
			text-decoration: none;
		}
		#menu ul li a:hover{
			background-color: #eee;
		}

		#formularios, #menu{
			margin: 0 auto;
			width: 330px;
		}

		
		.active{
			background-color: white !important;
		}

		.columns >div{
			width: 50%;
			display: inline-block;
			vertical-align: top;
			margin-right: -4px;
		}
		.columns .field{
			width: 80px;
		}

		#form_register{
			display: none;
		}

	</style>
</head>
<body style="background-image: url('@Url.Content("~/imagenes/lotes.jpg")');">
@*<body style="background-image: url('@Url.Content("~/images/fondo_asistencia.jpg")');">*@
	
	<div id="formularios">
		@*<form id="josias" method="post">*@
		<form action="/ValidarLogin/validar" method="post" id="form_session">

			<p>Login</p>
			<div class="field-container">
		
				<input type="text" class="field" name="logeo" placeholder="user@example.com" required> <br/>
			</div>
             <br /> 
			<p>Contraseña:</p>
			<div class="field-container">
			
				<input type="password" class="field"  name="contrazeña" placeholder="*******" required> <br/>
			</div>
			<br />
			<p class="center-content">
				<input type="submit" class="btn btn-danger" id="boton" value="Ingresar"><br /><br />
				

						</p>
			
			<br />
		@if(@TempData["msg"]!=null){
	   <div class="form-outline mb-4">
      <div class="alert alert-danger"  role="alert"> <center>@TempData["msg"]</center></div>
      </div>


		}

		</form>	

	

		
			
	</div>
	
	
	
	

</body>

</html>