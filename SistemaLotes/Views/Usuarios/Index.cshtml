        });



      var nombre = document.getElementById("nombre");
      var logeo = document.getElementById("logeo");
      var password = document.getElementById("password");
      var botonEnviar = document.getElementById("btnguardar");
      
        botonEnviar.disabled = true;
      function validarCampos() {
    // Verificar si hay valores en ambos campos
    if (nombre.value != "" && logeo.value != "" && password.value !="") {
      botonEnviar.disabled = false; // Habilitar el botón de envío
    } else {
      botonEnviar.disabled = true; // Deshabilitar el botón de envío
    }
  }

      nombre.addEventListener("input", validarCampos);
      logeo.addEventListener("input", validarCampos);
      password.addEventListener("input", validarCampos);


      function editar(idusuario) { 
        //alert(iddepartamento);
       
    $.ajax({

        //url:"/recuperarID/listarid/"+idempleados,
        method:"GET",
        data: {idusuario:idusuario},
        url:"/Usuarios/listaridD",
        contentType: false,
        dataType:"json",
        success: function(usuarios) {
            
            bto = (usuarios[0].imagen);
            var cade = bto;
            var resultado = "data:image/png;base64,"+cade;
            $('#idusuarios').val(usuarios[0].idusuario);
            $('#nombre').val(usuarios[0].nombre);
            $('#logeo').val(usuarios[0].logeo);
            $('#password').val(usuarios[0].contrazeña);
            
            
            $('#archivoImagenn').attr("src",resultado);
            $('#archivoImagenn').attr("#archivoImagen");
            $("#modalCajaMov").modal('show');
        
        },

        error: function(errormessage) {


            alert(errormessage.responseText);

        }

    });

    return false;


     }



    </script>